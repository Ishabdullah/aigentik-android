<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground">

    <!-- Header bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="16dp"
        android:background="?android:attr/windowBackground">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="?android:attr/textColorPrimary"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AI Diagnostic"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify AI performance and system connectivity."
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="13sp"
            android:layout_marginBottom="24dp"/>

        <!-- Native Library Status -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NATIVE SYSTEM"
            android:textColor="@color/accent"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView android:id="@+id/tvNativeLibStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checking..."
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Model Status -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI MODEL"
            android:textColor="@color/accent"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView android:id="@+id/tvModelStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checking..."
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <TextView android:id="@+id/tvModelInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="16dp"/>

        <!-- Inference Benchmark -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERFORMANCE"
            android:textColor="@color/accent"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"/>

        <Button android:id="@+id/btnRunBenchmark"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Run Inference Test"
            android:textColor="@color/aigentik_on_primary"
            android:backgroundTint="@color/aigentik_primary"
            android:layout_marginBottom="12dp"/>

        <TextView android:id="@+id/tvBenchmarkResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/accent"
            android:textSize="13sp"
            android:fontFamily="monospace"
            android:background="@drawable/bubble_assistant"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <TextView android:id="@+id/tvSampleOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Run benchmark to see sample output)"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:background="@drawable/bubble_assistant"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

        <!-- Gmail Health Check -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GMAIL HEALTH"
            android:textColor="@color/accent"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"/>

        <TextView android:id="@+id/tvGmailSignInStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checking..."
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <TextView android:id="@+id/tvGmailScopeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="13sp"
            android:layout_marginBottom="4dp"/>

        <TextView android:id="@+id/tvGmailHistoryStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="13sp"
            android:layout_marginBottom="12dp"/>

        <Button android:id="@+id/btnCheckGmailHealth"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Test API Access"
            android:textColor="?android:attr/textColorPrimary"
            android:backgroundTint="?android:attr/colorBackgroundFloating"
            android:layout_marginBottom="12dp"/>

        <TextView android:id="@+id/tvGmailHealthResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:background="@drawable/bubble_assistant"
            android:padding="12dp"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>
</ScrollView>
</LinearLayout>
