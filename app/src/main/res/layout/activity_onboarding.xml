<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#080C14">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¤– Welcome to Aigentik"
            android:textSize="26sp"
            android:textColor="#00D4FF"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your private on-device AI assistant"
            android:textSize="14sp"
            android:textColor="#7BA7CC"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Agent Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Assistant Name"
            android:textColor="#7BA7CC"
            android:textSize="13sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etAgentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. Aigentik"
            android:text="Aigentik"
            android:textColor="#FFFFFF"
            android:textColorHint="#334455"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"/>

        <!-- Owner Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textColor="#7BA7CC"
            android:textSize="13sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etOwnerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. Ish"
            android:textColor="#FFFFFF"
            android:textColorHint="#334455"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"/>

        <!-- Admin Phone -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Phone Number (Admin)"
            android:textColor="#7BA7CC"
            android:textSize="13sp"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your personal number â€” identifies your commands"
            android:textColor="#334455"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etAdminNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="+15551234567"
            android:textColor="#FFFFFF"
            android:textColorHint="#334455"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="phone"/>

        <!-- GVoice Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aigentik's Google Voice Number"
            android:textColor="#7BA7CC"
            android:textSize="13sp"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The number people text to reach Aigentik"
            android:textColor="#334455"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etAigentikNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="+15559876543"
            android:textColor="#FFFFFF"
            android:textColorHint="#334455"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:inputType="phone"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1A2A3A"
            android:layout_marginBottom="20dp"/>

        <!-- Google Account -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google Account"
            android:textColor="#00D4FF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Required for Gmail and Google Voice features"
            android:textColor="#7BA7CC"
            android:textSize="12sp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvGoogleAccountStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not signed in"
            android:textColor="#7BA7CC"
            android:textSize="13sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnGoogleSignIn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Sign in with Google"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1A73E8"
            android:layout_marginBottom="24dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1A2A3A"
            android:layout_marginBottom="20dp"/>

        <!-- Start button -->
        <Button
            android:id="@+id/btnSetup"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Start Aigentik"
            android:textSize="16sp"
            android:textColor="#000000"
            android:backgroundTint="#00D4FF"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can sign in to Google later in Settings"
            android:textColor="#334455"
            android:textSize="11sp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF4444"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>
</ScrollView>
