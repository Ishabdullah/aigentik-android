<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš™ï¸ Settings"
            android:textSize="22sp"
            android:textColor="#00FF88"
            android:layout_marginBottom="24dp"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Assistant Name"
            android:textColor="#CCCCCC"
            android:textSize="13sp"
            android:layout_marginBottom="4dp"/>
        <EditText android:id="@+id/etAgentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textColorHint="#555555"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textColor="#CCCCCC"
            android:textSize="13sp"
            android:layout_marginBottom="4dp"/>
        <EditText android:id="@+id/etOwnerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textColorHint="#555555"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Phone Number (Admin)"
            android:textColor="#CCCCCC"
            android:textSize="13sp"
            android:layout_marginBottom="4dp"/>
        <EditText android:id="@+id/etAdminNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textColorHint="#555555"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="phone"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aigentik Google Voice Number"
            android:textColor="#CCCCCC"
            android:textSize="13sp"
            android:layout_marginBottom="4dp"/>
        <EditText android:id="@+id/etAigentikNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textColorHint="#555555"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="phone"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gmail Address"
            android:textColor="#CCCCCC"
            android:textSize="13sp"
            android:layout_marginBottom="4dp"/>
        <EditText android:id="@+id/etGmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textColorHint="#555555"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textEmailAddress"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gmail App Password"
            android:textColor="#CCCCCC"
            android:textSize="13sp"
            android:layout_marginBottom="4dp"/>
        <EditText android:id="@+id/etAppPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textColorHint="#555555"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="32dp"
            android:inputType="textPassword"/>

        <Button android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Save Settings"
            android:textColor="#000000"
            android:backgroundTint="#00FF88"
            android:layout_marginBottom="8dp"/>

        <TextView android:id="@+id/tvSaveStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <Button android:id="@+id/btnManageModel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ§  Manage AI Model"
            android:textColor="#FFFFFF"
            android:backgroundTint="#222222"
            android:layout_marginBottom="8dp"/>

        <Button android:id="@+id/btnResetSetup"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Reset Setup"
            android:textColor="#FF4444"
            android:backgroundTint="#1A0000"/>

    </LinearLayout>
</ScrollView>
