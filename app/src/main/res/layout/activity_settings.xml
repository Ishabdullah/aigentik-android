<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground">

    <!-- Header bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="16dp"
        android:background="?android:attr/windowBackground">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="?android:attr/textColorPrimary"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settings"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Theme Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appearance"
            android:textColor="@color/accent"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <RadioGroup
            android:id="@+id/rgTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">
            <RadioButton
                android:id="@+id/rbThemeSystem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Follow System"
                android:textColor="?android:attr/textColorPrimary"/>
            <RadioButton
                android:id="@+id/rbThemeLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Light Mode"
                android:textColor="?android:attr/textColorPrimary"/>
            <RadioButton
                android:id="@+id/rbThemeDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dark Mode"
                android:textColor="?android:attr/textColorPrimary"/>
        </RadioGroup>

        <!-- Profile Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/accent"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Assistant Name"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>
        <EditText android:id="@+id/etAgentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textColorHint="?android:attr/textColorSecondary"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:textSize="15sp"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>
        <EditText android:id="@+id/etOwnerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textColorHint="?android:attr/textColorSecondary"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:textSize="15sp"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Phone (for remote commands)"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>
        <EditText android:id="@+id/etAdminNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textColorHint="?android:attr/textColorSecondary"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="phone"
            android:textSize="15sp"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aigentik Google Voice Number"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>
        <EditText android:id="@+id/etAigentikNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textColorHint="?android:attr/textColorSecondary"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:inputType="phone"
            android:textSize="15sp"/>

        <!-- Google Account -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google Account"
            android:textColor="@color/accent"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <TextView android:id="@+id/tvGoogleAccountStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not signed in"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="13sp"
            android:layout_marginBottom="12dp"/>

        <Button android:id="@+id/btnGoogleSignIn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Sign in with Google"
            android:textColor="@color/onPrimary"
            android:backgroundTint="@color/primary"
            android:layout_marginBottom="8dp"/>

        <Button android:id="@+id/btnGoogleSignOut"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Sign Out"
            android:textColor="#FF4444"
            android:backgroundTint="?android:attr/colorBackgroundFloating"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <TextView android:id="@+id/tvGmailScopeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <Button android:id="@+id/btnGrantGmailPerms"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Grant Gmail Permissions"
            android:textColor="@color/onPrimary"
            android:backgroundTint="#FFAA00"
            android:visibility="gone"
            android:layout_marginBottom="24dp"/>

        <!-- Security -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security"
            android:textColor="@color/accent"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Password (for remote commands)"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>
        <EditText android:id="@+id/etAdminPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New password"
            android:textColor="?android:attr/textColorPrimary"
            android:textColorHint="?android:attr/textColorSecondary"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:inputType="textPassword"
            android:textSize="15sp"/>

        <EditText android:id="@+id/etAdminPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm password"
            android:textColor="?android:attr/textColorPrimary"
            android:textColorHint="?android:attr/textColorSecondary"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:inputType="textPassword"
            android:textSize="15sp"/>

        <!-- Save -->
        <Button android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Save Settings"
            android:textColor="@color/onPrimary"
            android:backgroundTint="@color/primary"
            android:layout_marginBottom="16dp"/>

        <TextView android:id="@+id/tvSaveStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Danger Zone -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danger Zone"
            android:textColor="#FF4444"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <Button android:id="@+id/btnResetSetup"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Reset App Data"
            android:textColor="#FF4444"
            android:backgroundTint="?android:attr/colorBackgroundFloating"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>
</LinearLayout>
