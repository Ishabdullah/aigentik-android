<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/tvAppName"
                android:text="ðŸ¤– Aigentik"
                android:textSize="24sp"
                android:textColor="#00FF88"/>

            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v0.8"
                android:textSize="12sp"
                android:textColor="#555555"/>
        </LinearLayout>

        <!-- Status Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATUS"
                android:textColor="#555555"
                android:textSize="11sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting..."
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>
        </LinearLayout>

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Contacts stat -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="14dp"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/tvContactCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#00FF88"
                    android:textSize="28sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contacts"
                    android:textColor="#888888"
                    android:textSize="11sp"/>
            </LinearLayout>

            <!-- AI stat -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="14dp"
                android:gravity="center"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvAiStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â³"
                    android:textSize="28sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Engine"
                    android:textColor="#888888"
                    android:textSize="11sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Channel Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHANNELS"
                android:textColor="#555555"
                android:textSize="11sp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvGmailStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“§ Gmail: connecting..."
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvSmsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¬ SMS: monitoring"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvRcsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“± RCS: monitoring"
                android:textColor="#AAAAAA"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Activity Log -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECENT ACTIVITY"
                android:textColor="#555555"
                android:textSize="11sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvActivityLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No activity yet"
                android:textColor="#888888"
                android:textSize="12sp"
                android:fontFamily="monospace"/>
        </LinearLayout>

        <!-- Buttons -->
        <Button
            android:id="@+id/btnOpenChat"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="ðŸ’¬ Open Chat"
            android:textColor="#000000"
            android:backgroundTint="#00FF88"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnPause"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="â¸ Pause Aigentik"
            android:textColor="#FFFFFF"
            android:backgroundTint="#222222"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="âš™ï¸ Settings"
            android:textColor="#FFFFFF"
            android:backgroundTint="#222222"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnSyncContacts"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ”„ Sync Contacts"
            android:textColor="#000000"
            android:backgroundTint="#00FF88"/>

    </LinearLayout>
</ScrollView>
