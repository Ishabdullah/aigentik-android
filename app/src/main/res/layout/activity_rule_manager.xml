<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground">

    <!-- Header bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="16dp"
        android:background="?android:attr/windowBackground">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="?android:attr/textColorPrimary"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Message Rules"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control how Aigentik handles incoming messages."
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="13sp"
            android:layout_marginBottom="24dp"/>

        <!-- SMS Rules -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS RULES"
            android:textColor="@color/accent"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:id="@+id/layoutSmsRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"/>

        <!-- Add SMS Rule -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bubble_assistant"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New SMS Rule"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <EditText android:id="@+id/etSmsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description (e.g. Block spam)"
                android:textColor="?android:attr/textColorPrimary"
                android:textColorHint="?android:attr/textColorSecondary"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:inputType="text"
                android:textSize="14sp"/>

            <EditText android:id="@+id/etSmsConditionValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone number or keyword"
                android:textColor="?android:attr/textColorPrimary"
                android:textColorHint="?android:attr/textColorSecondary"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:inputType="text"
                android:textSize="14sp"/>

            <RadioGroup android:id="@+id/rgSmsConditionType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <RadioButton android:id="@+id/rbSmsFromNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From Number"
                    android:textSize="12sp"
                    android:checked="true"/>
                <RadioButton android:id="@+id/rbSmsContains"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contains Text"
                    android:textSize="12sp"
                    android:layout_marginStart="16dp"/>
            </RadioGroup>

            <RadioGroup android:id="@+id/rgSmsAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <RadioButton android:id="@+id/rbSmsSpam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spam"
                    android:textSize="12sp"
                    android:checked="true"/>
                <RadioButton android:id="@+id/rbSmsAutoReply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto-reply"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"/>
                <RadioButton android:id="@+id/rbSmsReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"/>
            </RadioGroup>

            <Button android:id="@+id/btnAddSmsRule"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Add SMS Rule"
                android:textColor="@color/aigentik_on_primary"
                android:backgroundTint="@color/aigentik_primary"/>
        </LinearLayout>

        <!-- Email Rules -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMAIL RULES"
            android:textColor="@color/accent"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:id="@+id/layoutEmailRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"/>

        <!-- Add Email Rule -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bubble_assistant"
            android:padding="16dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Email Rule"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <EditText android:id="@+id/etEmailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:textColor="?android:attr/textColorPrimary"
                android:textColorHint="?android:attr/textColorSecondary"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:inputType="text"
                android:textSize="14sp"/>

            <EditText android:id="@+id/etEmailConditionValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email, domain, or keyword"
                android:textColor="?android:attr/textColorPrimary"
                android:textColorHint="?android:attr/textColorSecondary"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:inputType="text"
                android:textSize="14sp"/>

            <RadioGroup android:id="@+id/rgEmailConditionType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <RadioButton android:id="@+id/rbEmailFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:textSize="12sp"
                    android:checked="true"/>
                <RadioButton android:id="@+id/rbEmailDomain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Domain"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"/>
                <RadioButton android:id="@+id/rbEmailSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subject"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"/>
                <RadioButton android:id="@+id/rbEmailPromo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promo"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"/>
            </RadioGroup>

            <RadioGroup android:id="@+id/rgEmailAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <RadioButton android:id="@+id/rbEmailSpam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spam"
                    android:textSize="12sp"
                    android:checked="true"/>
                <RadioButton android:id="@+id/rbEmailAutoReply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto-reply"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"/>
                <RadioButton android:id="@+id/rbEmailReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"/>
            </RadioGroup>

            <Button android:id="@+id/btnAddEmailRule"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Add Email Rule"
                android:textColor="@color/aigentik_on_primary"
                android:backgroundTint="@color/aigentik_primary"/>
        </LinearLayout>

        <!-- Status message -->
        <TextView android:id="@+id/tvRuleStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:textColor="@color/accent"/>

    </LinearLayout>
</ScrollView>
</LinearLayout>
